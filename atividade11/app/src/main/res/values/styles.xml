<resources>

    <style name="InputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@android:color/black</item>
    </style>

    <style name="InputEditTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">14dp</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textColorHint">#555555</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="TxtViewTituloStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TxtViewCorpoStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TxtViewSubtituloStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
