<resources>
    <style name="ViewStyle">
        <item name="android:background">@color/surface</item>
    </style>

    <style name="InputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/onLightSurfaceDim</item>
        <item name="android:textColorHint">@color/onLightSurface</item>
    </style>

    <style name="InputEditTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">14dp</item>
        <item name="android:textColor">@color/onLightSurface</item>
        <item name="android:background">@color/lightSurface</item>
    </style>

    <style name="TxtViewTituloStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/onSurface</item>
    </style>

    <style name="TxtViewCorpoStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/onSurface</item>
    </style>

    <style name="TxtViewSubtituloStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/onSurface</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/onPrimary</item>
    </style>
</resources>
