<resources>
    <style name="ViewStyle">
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="InputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">?attr/colorOnLightSurfaceDim</item>
        <item name="android:textColorHint">?attr/colorOnLightSurface</item>
    </style>

    <style name="InputEditTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">14dp</item>
        <item name="android:textColor">?attr/colorOnLightSurface</item>
        <item name="android:background">?attr/colorLightSurface</item>
    </style>

    <style name="TxtViewTituloStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TxtViewCorpoStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TxtViewSubtituloStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
</resources>
